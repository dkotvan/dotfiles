[core]
	editor = nvim
	excludesfile = ~/.gitignore
	pager = less -F -X
[color]
	ui = auto
[push]
	default = simple
[merge]
	tool = vimdiff
[diff]
	tool = vimdirdiff
[mergetool]
	tool = vimdiff
[mergetool]
  prompt = true
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool "vimdirdiff"]
  cmd = nvim -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE
[mergetool "vimdirdiff"]
  cmd = nvim -c 'DirDiff $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
# User, signing keys and other local stuff are in other file that is not versioned
[include]
  path = ~/.gitconfig.local
[commit]
	gpgsign = true
[pull]
	ff = only
[init]
	defaultBranch = main
